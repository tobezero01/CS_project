@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/NhuDinhDuc_Layout.cshtml";
}
@model HangHoa
<div class="ms-2 mx-2">
    <h1>Create</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-controller="Home" asp-action="Create" method="post" class="mt-3">
        <div style="margin-top:7px" class="form-group row">
            <label asp-for="MaLoai" class="col-sm-2 col-form-label"></label> <div class="col-sm-10">
                <select asp-for="MaLoai" class="custom-select mr-sm-2"
                        asp-items="@ViewBag.MaLoai"></select>
            </div>
            <span asp-validation-for="MaLoai" class="text-danger"></span>
        </div>
        <div style="margin-top:7px" class="form-group row">
            <label asp-for="TenHang" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="TenHang" class="form-control" placeholder="Ten hang">
            </div>
            <span asp-validation-for="TenHang" class="text-danger"></span>
        </div>
        <div style="margin-top:7px" class="form-group row">
            <label asp-for="Gia" class="col-sm-2 col-form-label"></label> <div class="col-sm-10">
                <input asp-for="Gia" class="form-control" placeholder="Gia">
            </div>
            <span asp-validation-for="Gia" class="text-danger"></span>
        </div>

        <div style="margin-top:7px" class="form-group row">
            <label asp-for="Anh" class="col-sm-2 col-form-label"></label> <div class="col-sm-10">
                <input asp-for="Anh" class="form-control">
            </div>
            <span asp-validation-for="Anh" class="text-danger"></span>
        </div>
        <div style="margin-top:10px" class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </form>
</div>